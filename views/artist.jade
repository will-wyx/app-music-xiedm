doctype html
html
    head
        link(rel='stylesheet', href='/stylesheets/artist.css')
    body
        .main
            .mod_data
                span.data__cover
                    a(href='#')
                        img.data__photo(src= artist.icon, alt= artist.name)
                .data__cont
                    .data__name
                        h1.data__name_txt
                            a(title=artist.name, href='#')= artist.name
                    #singer_desc.data__desc
                        #short_desc.data__desc_txt= artist.infos.join(' ')
                        a.js_desc(href='javascript:;', data-left='0', data-stat='y_new.singer.header.more_info', data-top='0', data-target='popup_data_detail', style='') [更多]
                    ul.mod_data_statistic
                        li.data_statistic__item
                            a.js_goto_tab(href='#tab=song', data-stat='y_new.singer.header.song_tab', data-tab='song')
                                span.data_statistic__tit 单曲
                                strong.data_statistic__number 262
                        li.data_statistic__item
                            a.js_goto_tab(href='#tab=album', data-stat='y_new.singer.header.album_tab', data-tab='album')
                                span.data_statistic__tit 专辑
                                strong.data_statistic__number 33
                        li.data_statistic__item.data_statistic__item--last
                            a.js_goto_tab(href='#tab=mv', data-stat='y_new.singer.header.mv_tab', data-tab='mv')
                                span.data_statistic__tit MV
                                strong.data_statistic__number 193
                    .data__actions(role='toolbar')
                        a.mod_btn_green.js_singer_radio(href='#')
                            i.mod_btn_green__icon_play
                            | 播放歌手热门歌曲
            // 首页 begin
            #index_tab.js_tab
                .mod_part
                    .part__hd
                        h2.part__tit 热门歌曲
                        a.part__more.js_goto_tab(href='#tab=song', data-stat='y_new.singer.index.song_all', data-tab='song')
                            | 全部
                            i.icon_part_arrow.sprite
                    .mod_songlist
                        ul.songlist__header
                            li.songlist__edit.songlist__edit--check
                                input.songlist__checkbox(type='checkbox')
                            li.songlist__header_name 歌曲
                            li.songlist__header_time 时长
                        ul.songlist__list
                            -
                                var index = 1;
                            each item in artist.audios
                                li
                                    .songlist__item(onmouseover="this.className=(this.className+' songlist__item--hover')", onmouseout="this.className=this.className.replace(/ songlist__item--hover/, '')")
                                        .songlist__edit.songlist__edit--check
                                            input.songlist__checkbox(type='checkbox')
                                        .songlist__number= index++
                                        .songlist__songname
                                            span.songlist__songname_txt
                                                a.js_song(href='#', title= item.title)= item.title
                                            .mod_list_menu
                                                a.list_menu__item.list_menu__play.js_play(href='javascript:;', title='播放')
                                                    i.list_menu__icon_play
                                                    span.icon_txt 播放
                                                a.list_menu__item.list_menu__share.js_share(href='javascript:;', title='分享', aria-haspopup='true', data-aria='menu_share')
                                                    i.list_menu__icon_share
                                                    span.icon_txt 分享
                                        .songlist__time= item.timeLength
                                        .songlist__other
                .mod_part
                    .part__hd
                        h2.part__tit 视频
                        a.part__more.js_goto_tab(href='#', data-stat='y_new.singer.index.mv_all', data-tab='mv')
                            | 全部
                            i.icon_part_arrow.sprite
                    .mod_mv
                        ul#mvlist.mv_list__list
                            each item in artist.videos
                                li.mv_list__item(data-vid='X0090t4LYWd', data-id='66991')
                                    .mv_list__item_box
                                        a.mv_list__cover.mod_cover.js_mv(href= item.path)
                                            img.mv_list__pic(src= item.pic)
                                            i.mod_cover__icon_play
                                        h3.mv_list__title
                                            a.js_mv(href= item.path)= item.title
                .mod_part
                    .part__hd
                        h2.part__tit 档期
                    .mod_songlist
                        ul.songlist__header
                            li.songlist__edit.songlist__edit--check
                                input.songlist__checkbox(type='checkbox')
                            li.songlist__header_name 歌曲
                            li.songlist__header_name 歌曲
                            li.songlist__header_time 时长
                        ul.songlist__list
                            -
                                var index = 1;
                            each item in artist.audios
                                li
                                    .songlist__item(onmouseover="this.className=(this.className+' songlist__item--hover')", onmouseout="this.className=this.className.replace(/ songlist__item--hover/, '')")
                                        .songlist__edit.songlist__edit--check
                                            input.songlist__checkbox(type='checkbox')
                                        .songlist__number= index++
                                        .songlist__songname
                                            span.songlist__songname_txt
                                                a.js_song(href='#', title= item.title)= item.title
                                            .mod_list_menu
                                                a.list_menu__item.list_menu__play.js_play(href='javascript:;', title='播放')
                                                    i.list_menu__icon_play
                                                    span.icon_txt 播放
                                                a.list_menu__item.list_menu__share.js_share(href='javascript:;', title='分享', aria-haspopup='true', data-aria='menu_share')
                                                    i.list_menu__icon_share
                                                    span.icon_txt 分享
                                        .songlist__time= item.timeLength
                                        .songlist__other
            // 首页 end
            // 单曲tab begin
            #song_tab.mod_part_detail.js_tab(style='display:none;')
                .part_detail__hd
                    h2.part_detail__tit 单曲 262
                .none_txt(style='display:none;')
                    i.none_txt__symbol
                    p 该歌手还没有发表过单曲
                .js_content
                    .mod_songlist_toolbar
                        a.mod_btn.js_all_play(href='//y.qq.com/portal/player.html', data-stat='y_new.singer.song.playall')
                            i.mod_btn__icon_play
                            | 播放全部
                        a.mod_btn.js_all_fav(href='javascript:;', data-stat='y_new.singer.song.addall')
                            i.mod_btn__icon_add
                            | 添加到
                        a.mod_btn.js_all_down(href='javascript:;', data-stat='y_new.singer.song.downloadall')
                            i.mod_btn__icon_down
                            | 下载
                        a.mod_btn.js_batch(href='javascript:;', data-stat='y_new.singer.song.batch')
                            i.mod_btn__icon_batch
                            | 批量操作
                    .mod_songlist
                        ul.songlist__header
                            li.songlist__edit.songlist__edit--check
                                input.songlist__checkbox.js_check_all(type='checkbox')
                            li.songlist__header_name 歌曲
                            li.songlist__header_album 专辑
                            li.songlist__header_time 时长
                        ul#song_box.songlist__list
            // 单曲tab end
            // 专辑tab begin
            #album_tab.mod_part_detail.js_tab(style='display:none;')
                .part_detail__hd
                    h2.part_detail__tit 专辑 33
                .none_txt(style='display:none;')
                    i.none_txt__symbol
                    p 该歌手还没有发表过专辑
                .mod_playlist.js_content
                    ul#album_box.playlist__list
            // 专辑tab end
            // MV tab begin
            #mv_tab.mod_part_detail.js_tab(style='display:none;')
                .part_detail__hd
                    h2.part_detail__tit MV 193
                .none_txt(style='display:none;')
                    i.none_txt__symbol
                    p 该歌手还没有发表过MV
                .mod_mv.js_content
                    ul#mv_box.mv_list__list
            // MV tab end
            // 专辑简介
            #popup_data_detail.popup_data_detail(data-aria='popup', style='display:none;z-index:10000000000;')
                .popup_data_detail__cont
                    h3.popup_data_detail__tit 歌手简介
                    each item in artist.infos
                        p= item
                i.popup_data_detail__arrow
        script(src='/javascripts/jquery-3.1.1.min.js')
        script.
            $(function () {
                var $popup = $('[data-aria="popup"]');
                $(document).on('click', function (e) {
                    var $this = $(e.target);
                    var target = $this.attr('data-target');
                    if (target) {
                        $('#' + target).show();
                    } else {
                        $popup.hide();
                    }
                });
            })