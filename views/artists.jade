extends layout
block head
    meta(name='keywords', lang='en', content='DJ,ARTIST')
    meta(name='keywords', lang='zh', content='艺人')
    link(rel='stylesheet', href='/stylesheets/list.css')
block content
    div.container
        div.wrapper
            ul.artist
                each item in list
                    li
                        a(href='/artists/' + item._id)
                            dl
                                dt
                                    img(src=item.icon)
                                dd
                                    h2= item.name
                                    p= item.description